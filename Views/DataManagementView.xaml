                            <TextBlock Grid.Column="1" Width="130" Text="{Binding TrsWindGroup,UpdateSourceTrigger=PropertyChanged}"  FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#2070EA"></TextBlock>
