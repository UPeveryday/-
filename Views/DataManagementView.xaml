                            <TextBlock Grid.Column="1" Width="120" Text="{Binding TrsOverVolata,UpdateSourceTrigger=PropertyChanged}"  FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#2070EA"></TextBlock>
