            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Viewbox>
            <ContentControl s:View.Model="{Binding Items[0]}">

            </ContentControl>
        </Viewbox>
        <StackPanel Grid.Row="1">
            <ContentControl s:View.Model="{Binding Items[1]}">
            </ContentControl>
        </StackPanel>
    </Grid>
</Window>
